{
    "$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "suspicious": {
                "noExplicitAny": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "files": {
        "includes": [
            "**/*.ts",
            "**/*.tsx",
            "**/*.js",
            "**/*.jsx",
            "**/*.mjs",
            "!convex/_generated/**",
            "!.next/**",
            "!node_modules/**",
            "!out/**",
            "!build/**"
        ]
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
